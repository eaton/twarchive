{
  "name": "twarchive",
  "version": "1.0.0",
  "description": "Tools to convert a Twitter Archive into personally-hostable data",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">18.14.0"
  },
  "scripts": {
    "stat": "ts-node-esm src/stat.ts",
    "build": "npm run clean; npm run compile",
    "clean": "rm -rf ./dist;rm *.tsbuildinfo",
    "compile": "tsc -p ./tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.2.5",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "prettier": "^2.8.8",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "twitter-archive-reader": "^7.2.0",
    "typescript": "^5.1.3"
  }
}
